@model MvcWebApp.Models.ViewModels.AddContact

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserContact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group inline">
                <label asp-for="UserId" class="control-label"></label>
                <input readonly asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
@*                <label asp-for="userContact.User.FirstName" class="control-label"></label>
                <input readonly asp-for="User.FirstName" class="form-control" />*@
            </div>
            <div class="form-group">
                <label asp-for="FriendId" class="control-label"></label>
                <select class="form-select" asp-for="FriendId">
                    @foreach (var contact in Model.userContacts)
                    {
                        <option value="@contact.Id">@contact.Name @contact.Email</option>
                    }

                </select>
            </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.UserId">Back to List</a>
</div>

